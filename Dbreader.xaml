<Window x:Class="SKLAD.Dbreader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKLAD"
        mc:Ignorable="d"
        Title="Dbreader" Height="450" Width="800">
    <Grid>
        <Button Content="Назад" Click="Exit" HorizontalAlignment="Left" Margin="31,382,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="275,142,0,0" VerticalAlignment="Top"/>
        <Button Content="Добавить читателя" Click="AddCGruz_Click" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <TextBox x:Name="Surname" HorizontalAlignment="Center" Margin="0,146,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="FirstName" HorizontalAlignment="Center" Margin="0,177,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LastName" HorizontalAlignment="Center" Margin="0,212,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="298,173,0,0" VerticalAlignment="Top"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="274,0,0,0" VerticalAlignment="Center"/>
        <Label Content="Добавление" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PhoneNumber" HorizontalAlignment="Center" Margin="0,246,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Номер телефона" HorizontalAlignment="Left" Margin="232,242,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
