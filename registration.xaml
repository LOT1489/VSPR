<Window x:Class="SKLAD.registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKLAD"
        mc:Ignorable="d"
        Title="registration" Height="450" Width="800">
    <Grid Background="White">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="253,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="245,91,0,0" VerticalAlignment="Top"/>
        <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="185,127,0,0" VerticalAlignment="Top"/>
        <Label Content="Должность" HorizontalAlignment="Left" Margin="225,247,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Margin="317,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="317,99,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="ConfirmPasswordBox" HorizontalAlignment="Left" Margin="317,131,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Зарегистрировать пользователя" HorizontalAlignment="Left" Margin="286,320,0,0" VerticalAlignment="Top" Click="registr_Click" Background="#FF3A90C9"/>
        <Button Content="Выход из аккаунта" Click="exit_Click" HorizontalAlignment="Left" Margin="33,388,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <ComboBox x:Name="RegisterRole" HorizontalAlignment="Left" Margin="317,247,0,0" VerticalAlignment="Top" Width="120" IsEditable ="True">
            <ComboBoxItem Content="ГлавныйБиблиотекарь" />
            <ComboBoxItem Content="Библиотекарь" />
        </ComboBox>
        <TextBox x:Name="RegisterRolebox" HorizontalAlignment="Left" Margin="623,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
        <Button Content="Посмотреть список сотрудников" Click="prosmotr_Click" HorizontalAlignment="Left" Margin="33,28,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <Label Content="Регистрация" HorizontalAlignment="Left" Margin="338,38,0,0" VerticalAlignment="Top"/>
        <Label Content="Удаление сотрудника" HorizontalAlignment="Left" Margin="623,66,0,0" VerticalAlignment="Top"/>
        <Button Content="Удалить сотрудника" Click="DeleteUser_Click"  HorizontalAlignment="Left" Margin="484,109,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <ComboBox x:Name="UserComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="623,107,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="237,163,0,0" VerticalAlignment="Top"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="261,188,0,0" VerticalAlignment="Top"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="234,213,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Surname" HorizontalAlignment="Left" Margin="317,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="317,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Otch" HorizontalAlignment="Left" Margin="317,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
