<Window x:Class="SKLAD.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKLAD"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800">
    <Grid Background="White">
        <Label Content="Логин" HorizontalAlignment="Left" Margin="261,121,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="257,173,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Login" HorizontalAlignment="Center" Margin="0,129,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Авторизоваться" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Click="authorization_click" Background="#FF4A91E5"/>
        <Button Content="На начальную страницу" HorizontalAlignment="Left" Margin="17,391,0,0" VerticalAlignment="Top" Click="back_click" Background="#FF3B8AE8"/>
        <TextBlock x:Name="ErrorText" Visibility="Collapsed" Foreground="Red" HorizontalAlignment="Left" Margin="241,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="341"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,177,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Здравствуйте!" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
