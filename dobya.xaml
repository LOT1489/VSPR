<Window x:Class="SKLAD.dobya"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKLAD"
        mc:Ignorable="d"
        Title="dobya" Height="450" Width="800">
    <Grid Background="White">
        <Button Content="На главное окно" Click="exit_Click" HorizontalAlignment="Left" Margin="35,383,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <Button Content="Добавить книгу" Click="Add_Click" HorizontalAlignment="Left" Margin="265,257,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <TextBox x:Name="name" HorizontalAlignment="Left" Margin="250,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="166,119,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="author" HorizontalAlignment="Left" Margin="250,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Автор" HorizontalAlignment="Left" Margin="178,159,0,0" VerticalAlignment="Top"/>
        <Label Content="Место хранения" HorizontalAlignment="Left" Margin="131,195,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="location" HorizontalAlignment="Left" Margin="250,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Удалить книгу" HorizontalAlignment="Left" Margin="618,153,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="books" IsEditable="True" HorizontalAlignment="Left" Margin="618,198,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Click="Deletebook" Content="Удалить книгу" HorizontalAlignment="Left" Margin="517,199,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>

    </Grid>
</Window>
