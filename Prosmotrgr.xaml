<Window x:Class="SKLAD.Prosmotrgr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKLAD"
        mc:Ignorable="d"
        Title="Prosmotrgr" Height="450" Width="800">
    <Grid Background="White">
        <Button Content="Назад" Click="exit" HorizontalAlignment="Left" Margin="24,393,0,0" VerticalAlignment="Top" Background="#FF3A90C9"/>
        <DataGrid x:Name="datagr" AutoGenerateColumns="False" Margin="0,0,0,52" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding [Наименование]}"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Автор}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Статус}"/>
                <DataGridTextColumn Header="Место хранения" Binding="{Binding [Место хранения]}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
